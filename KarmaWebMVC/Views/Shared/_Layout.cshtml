@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="zxx" class="no-js">

<head>
	<!-- Mobile Specific Meta -->
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<!-- Favicon-->
	<link rel="shortcut icon" href="~/KarmaFontEnd/img/fav.png">
	<!-- Author Meta -->
	<meta name="author" content="CodePixar">
	<!-- Meta Description -->
	<meta name="description" content="">
	<!-- Meta Keyword -->
	<meta name="keywords" content="">
	<!-- meta character set -->
	<meta charset="UTF-8">
	<!-- Site Title -->
	<title>Karma</title>
	<!--
		CSS
		============================================= -->
	<link rel="stylesheet" href="~/KarmaFontEnd/css/linearicons.css">
	<link rel="stylesheet" href="~/KarmaFontEnd/css/font-awesome.min.css">
	<link rel="stylesheet" href="~/KarmaFontEnd/css/themify-icons.css">
	<link rel="stylesheet" href="~/KarmaFontEnd/css/bootstrap.css">
	<link rel="stylesheet" href="~/KarmaFontEnd/css/owl.carousel.css">
	<link rel="stylesheet" href="~/KarmaFontEnd/css/nice-select.css">
	<link rel="stylesheet" href="~/KarmaFontEnd/css/nouislider.min.css">
	<link rel="stylesheet" href="~/KarmaFontEnd/css/ion.rangeSlider.css" />
	<link rel="stylesheet" href="~/KarmaFontEnd/css/ion.rangeSlider.skinFlat.css" />
	<link rel="stylesheet" href="~/KarmaFontEnd/css/magnific-popup.css">
	<link rel="stylesheet" href="~/KarmaFontEnd/css/main.css">
</head>

<body >

	<!-- Start Header Area -->
	<header class="header_area sticky-header">
		<div class="main_menu">
			<nav class="navbar navbar-expand-lg navbar-light main_box">
				<div class="container">
					<!-- Brand and toggle get grouped for better mobile display -->
					<a class="navbar-brand logo_h" href="index.html"><img src="../KarmaFontEnd/img/logo.png" alt=""></a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
							aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<!-- Collect the nav links, forms, and other content for toggling -->
					<div class="collapse navbar-collapse offset" id="navbarSupportedContent">
						<ul class="nav navbar-nav menu_nav ml-auto">
							<li class="nav-item active"><a class="nav-link" href="/Home">Home</a></li>
							<li class="nav-item submenu dropdown">
								<a href="/Product/" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
								   aria-expanded="false">Shop</a>
								<ul class="dropdown-menu">
									<li class="nav-item"><a class="nav-link" href="/Product/">Shop Category</a></li>
									@* <li class="nav-item"><a class="nav-link" href="single-product.html">Product Details</a></li>
									<li class="nav-item"><a class="nav-link" href="checkout.html">Product Checkout</a></li> *@
									<li class="nav-item"><a class="nav-link" asp-controller="Cart" asp-action="Index">Shopping Cart</a></li>
									@* <li class="nav-item"><a class="nav-link" href="confirmation.html">Confirmation</a></li> *@
								</ul>
							</li>
							
							<li class="nav-item submenu dropdown">
								<a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
								   aria-expanded="false">Pages</a>
								<ul class="dropdown-menu">
									@if (User.Identity?.IsAuthenticated ?? false)
									{
										<li class="nav-item"><a class="nav-link" > Hi, @User.Identity.Name</a></li>
										<li class="nav-item"><a class="nav-link" href="/Account/Logout">Logout</a></li>
									}
									else{
									<li class="nav-item"><a class="nav-link" href="/Account/Login">Login</a></li>
									<li class="nav-item"><a class="nav-link" href="/Account/Create">Register</a></li>
									}
									

								</ul>
							</li>

							
							 @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
							{ 
								<li class="nav-item">
									<a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a>
								</li>
							 } 
							@*  <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="Index">Admin</a></li>  *@
						</ul>
						<ul class="nav navbar-nav navbar-right">
							@*  @await (Component.InvokeAsync("_Cart"))*@
							<li class="nav-item" >
								<button class="search"><span class="lnr lnr-magnifier" id="search" name="query"></span></button>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</div>
		<div class="search_input" id="search_input_box">
			<div class="container">
				<form asp-controller="Product" asp-action="Index" class="d-flex justify-content-between">

					<input type="text" name="query" class="form-control" id="search_input" placeholder="Search Here">
					<button type="submit" class="btn"></button>
					<span class="lnr lnr-cross" id="close_search" title="Close Search"></span>
				</form>
			</div>
		</div>
	</header>

	<!-- End Header Area -->
	@RenderBody()
	<!-- start footer Area -->
	@Html.Partial("_Footer")
	<!-- End footer Area -->

	<script src="~/KarmaFontEnd/js/vendor/jquery-2.2.4.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper~./KarmaFontEnd/js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4"
			crossorigin="anonymous"></script>
	<script src="~/KarmaFontEnd/js/vendor/bootstrap.min.js"></script>
	<script src="~/KarmaFontEnd/js/jquery.ajaxchimp.min.js"></script>
	<script src="~/KarmaFontEnd/js/jquery.nice-select.min.js"></script>
	<script src="~/KarmaFontEnd/js/jquery.sticky.js"></script>
	<script src="~/KarmaFontEnd/js/nouislider.min.js"></script>
	<script src="~/KarmaFontEnd/js/countdown.js"></script>
	<script src="~/KarmaFontEnd/js/jquery.magnific-popup.min.js"></script>
	<script src="~/KarmaFontEnd/js/owl.carousel.min.js"></script>
	<!--gmaps Js-->
	<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCjCGmQ0Uq4exrzdcL6rvxywDDOvfAu6eE"></script>
	<script src="~/KarmaFontEnd/js/gmaps.min.js"></script>
	<script src="~/KarmaFontEnd/js/main.js"></script>
</body>

</html>

