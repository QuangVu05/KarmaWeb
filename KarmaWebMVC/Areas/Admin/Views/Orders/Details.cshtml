@model KarmaWebMVC.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Order Details</h2>

<p><strong>Full Name:</strong> @Model.FullName</p>
<p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
<p><strong>Address:</strong> @Model.Address</p>
<p><strong>Note:</strong> @Model.Note</p>
<p><strong>Date:</strong> @Model.DateTime.ToString("dd/MM/yyyy HH:mm")</p>
<p><strong>Status:</strong> @Model.OrderStatus.StatusName</p>
<p><strong>User:</strong> @Model.User.Email</p>

<h3>Order Items</h3>
<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Quantity</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.ProductPrice</td>
                <td>@item.ProductQuantity</td>
                <td>@(item.ProductPrice * item.ProductQuantity)</td>
            </tr>
        }
    </tbody>
</table>

<p><strong>Total Order Price:</strong> @Model.TotalPriceOder</p>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.OrderId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
